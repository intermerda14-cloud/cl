// /api/debug.js
if (!global.bbData) {
    global.bbData = { symbols: {}, charts: {}, positions: {} };
}

export default function handler(req, res) {
    res.setHeader('Access-Control-Allow-Origin', '*');
    res.setHeader('Access-Control-Allow-Methods', 'GET, POST, OPTIONS');
    res.setHeader('Content-Type', 'application/json');
    
    if (req.method === 'OPTIONS') {
        return res.status(200).end();
    }
    
    const symbols = global.bbData.symbols;
    const symbolKeys = Object.keys(symbols);
    
    res.status(200).json({
        status: 'ok',
        timestamp: new Date().toISOString(),
        total_symbols: symbolKeys.length,
        symbols: symbolKeys,
        last_updates: symbolKeys.map(sym => ({
            symbol: sym,
            last_update: symbols[sym].last_update ? new Date(symbols[sym].last_update).toISOString() : null,
            age_seconds: symbols[sym].last_update ? Math.floor((Date.now() - symbols[sym].last_update) / 1000) : null
        })),
        debug_info: {
            storage_status: 'OK',
            ea_should_send_to: 'POST /api/update',
            ea_config: {
                host: 'cl-ten-woad.vercel.app',
                path: '/',
                endpoints: ['update', 'chart', 'positions']
            }
        }
    });
}
